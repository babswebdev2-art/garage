{% extends 'base.html.twig' %}

{% block title %}Connexion au Garage{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card bg-light shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0"><i class="fas fa-lock me-2"></i>Connexion Administration</h4>
                    </div>
                    <div class="card-body p-4">

                        {# Gestion affichage de l'erreur si les identifiants sont faux #}
                        {% if error %}
                            <div class="alert alert-danger">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        <form action="{{ path('account_login') }}" method="post">
                            <div class="form-group mb-3">
                                <label for="_username" class="form-label">Email :</label>
                                <input type="email" name="_username" id="_username" class="form-control" value="{{ last_username }}" placeholder="votre@email.com" required>
                            </div>

                            <div class="form-group mb-3">
                                <label for="_password" class="form-label">Mot de passe :</label>
                                <input type="password" name="_password" id="_password" class="form-control" placeholder="••••••••" required>
                            </div>

                            <div class="d-grid mt-4">
                                <button type="submit" class="btn btn-primary shadow-sm">
                                    Se connecter
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
