{% extends 'base.html.twig' %}

{% block title %}Connexion Administrateur{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card bg-light p-4">
                    <h1 class="mb-4">Connexion</h1>

                    {% if hasError %}
                        <div class="alert alert-danger">
                            Les identifiants sont invalides.
                        </div>
                    {% endif %}

                    <form action="{{ path('account_login') }}" method="post">
                        <div class="form-group mb-3">
                            <label for="_username">Email</label>
                            <input type="text" name="_username" id="_username" class="form-control" value="{{ username }}" placeholder="Email de l'admin..." required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="_password">Mot de passe</label>
                            <input type="password" name="_password" id="_password" class="form-control" placeholder="Mot de passe..." required>
                        </div>
                        <button type="submit" class="btn btn-primary">Connexion</button>
                    </form>

                    <hr>
                    <p>Pas encore de compte ? <a href="{{ path('account_registration') }}">Inscrivez-vous ici</a></p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
