{% extends 'base.html.twig' %}

{% block title %}Connexion - BabsGarage{% endblock %}

{% block body %}
    <div class="container full d-flex align-items-center justify-content-center">
        <div class="card p-4 shadow border-0" style="max-width: 450px; width: 100%;">
            <div class="card-body">
                <h1 class="h3 mb-4 text-center text-uppercase fw-bold">Espace Membre</h1>

                {% if hasError %}
                    <div class="alert alert-danger text-center">Identifiants invalides</div>
                {% endif %}

                <form action="{{ path('account_login') }}" method="post">
                    <div class="mb-3">
                        <label class="form-label">Email professionnel</label>
                        <input type="email" name="_username" value="{{ username }}" class="form-control" placeholder="votre@email.com" required autofocus>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mot de passe</label>
                        <input type="password" name="_password" class="form-control" placeholder="••••••••" required>
                    </div>
                    <hr>
                    <button type="submit" class="btn btn-primary btn-lg w-100 shadow-sm">Se connecter</button>

                    <div class="mt-3 text-center">
                        <a href="{{ path('account_registration') }}" class="text-muted small">Pas encore de compte ? S'inscrire</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
