{% extends 'base.html.twig' %}

{% block title %}Inscription au Garage{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5">
        <div class="row justify-content-center">
            <div class="col-md-8 card bg-light p-4 shadow-sm">
                <h1 class="mb-4 text-center">Créez votre compte</h1>

                {{ form_start(form) }}

                {# Affichage des erreurs#}

                {{ form_errors(form) }}

                <div class="row">
                    <div class="col">
                        {{ form_row(form.firstName) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.lastName) }}
                    </div>
                </div>

                {{ form_row(form.email) }}
                {{ form_row(form.password) }}
                {{ form_row(form.picture) }}
                {{ form_row(form.introduction) }}
                {{ form_row(form.description) }}

                <div class="alert alert-info mt-3">
                    <small>
                        <i class="fas fa-info-circle"></i>
                        En vous inscrivant, vous pourrez publier vos propres annonces de véhicules.
                    </small>
                </div>

                <button type="submit" class="btn btn-success btn-lg w-100 mt-3">
                    <i class="fas fa-user-plus"></i> Confirmer l'inscription
                </button>

                {{ form_end(form) }}

                <p class="mt-4 text-center border-top pt-3">
                    Déjà inscrit ? <a href="{{ path('account_login') }}" class="btn btn-link">Connectez-vous ici</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
