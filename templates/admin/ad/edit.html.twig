{% extends 'base.html.twig' %}

{% block title %}Modifier l'annonce : {{ ad.brand }}{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card shadow border-0">
                    <div class="card-header bg-warning py-3 text-dark">
                        <h2 class="h4 mb-0 fw-bold">Modifier le v√©hicule : {{ ad.brand }} {{ ad.model }}</h2>
                    </div>
                    <div class="card-body p-5">
                        {{ form_start(form) }}

                        {{ form_widget(form) }}

                        <div class="mt-4 d-flex justify-content-between">
                            <button type="submit" class="btn btn-success btn-lg px-5 shadow">
                                Enregistrer les modifications
                            </button>
                            <a href="{{ path('ads_show', {'slug': ad.slug}) }}" class="btn btn-outline-secondary btn-lg">
                                Annuler
