{% extends 'base.html.twig' %}

{% block title %}Mon Profil - BabsGarage{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-md-3 text-center">
                <img src="{{ app.user.picture ?: 'https://via.placeholder.com/150' }}" class="img-fluid rounded-circle mb-3 shadow" alt="Avatar">
                <h2>{{ app.user.firstName }} {{ app.user.lastName }}</h2>
                <span class="badge bg-primary">Membre</span>
            </div>
            <div class="col-md-9">
                <div class="card p-4 shadow-sm border-0">
                    <h3>Mes informations</h3>
                    <hr>
                    <p><strong>Email :</strong> {{ app.user.email }}</p>
                    {# On affiche le premier rôle proprement #}
                    <p><strong>Rôle :</strong> {{ app.user.roles[0]|replace({'ROLE_': ''}) }}</p>
                    <div class="mt-4">
                        <a href="{{ path('account_profile') }}" class="btn btn-outline-primary">Modifier mon profil</a>
                        <a href="{{ path('ads_create') }}" class="btn btn-success ms-2">Ajouter une voiture</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
