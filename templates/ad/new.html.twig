{% extends 'base.html.twig' %}

{% block title %}Création d'une annonce{% endblock %}

{# On indique à Symfony d'utiliser ce fichier pour dessiner les champs de myForm #}
{% form_theme myForm 'ad/_collection.html.twig' %}

{% block body %}
    <div class="container full py-5">
        <h2 class="mb-3">Création d'une annonce</h2>

        {{ form_start(myForm) }}

        {{ form_widget(myForm) }}

        <button type="submit" class="btn btn-primary mt-3">Créer l'annonce</button>

        {{ form_end(myForm) }}
    </div>
{% endblock %}

{% block javascripts %}
    {# Ton script externe qui gère l'ajout dynamique #}
    {{ encore_entry_script_tags('annonce') }}
{% endblock %}
