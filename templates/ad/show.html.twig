{% extends 'base.html.twig' %}

{% block title %}Annonce - {{ ad.brand }} {{ ad.model }}{% endblock %}

{% block body %}
    {# 1. BANDEAU DE TITRE #}
    <div class="annonce-title" style="background-image: url({{ ad.coverImage }}); background-size: cover; background-position: center; padding: 5rem 0; position: relative; color: white;">
        <div class="container text-center py-5" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.8);">
            <h1 class="display-4 fw-bold">{{ ad.brand }} {{ ad.model }}</h1>
            <p class="h2"><strong>{{ ad.price | number_format(0, ',', ' ') }} €</strong></p>

            <div class="mt-4">
                {% if (app.user and app.user == ad.author) or is_granted("ROLE_ADMIN") %}
                    {# LIENS CORRIGÉS ICI #}
                    <a href="{{ path('admin_ads_edit', {'id': ad.id}) }}" class="btn btn-warning m-2 shadow">Modifier l'annonce</a>
                    <a href="{{ path('admin_ads_delete', {'id': ad.id}) }}"
                       class="btn btn-danger m-2 shadow"
                       onclick="return confirm('Voulez-vous vraiment supprimer cette annonce ?')">
                       Supprimer l'annonce
                    </a>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="container mt-5 mb-5">
        <div class="row">
            {# COLONNE GAUCHE #}
            <div class="col-md-8">
                <div class="card p-4 mb-4 shadow-sm border-0">
                    <h3>Description</h3>
                    <p class="mt-3">{{ ad.description | nl2br }}</p>

                    <h4 class="mt-4 border-bottom pb-2">Options</h4>
                    <div class="bg-light p-3 rounded border">
                        {{ ad.options | default('Aucune option spécifiée') }}
                    </div>
                </div>

                {# CARROUSEL #}
                <div class="bd-example shadow-sm rounded overflow-hidden">
                    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            {% for image in ad.images %}
                                <div class="carousel-item {% if loop.first %}active{% endif %}">
                                    <img src="{{ image.url }}" class="d-block w-100" style="height: 450px; object-fit: cover;">
                                </div>
                            {% endfor %}
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon"></span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                            <span class="carousel-control-next-icon"></span>
                        </button>
                    </div>
                </div>
            </div>

            {# COLONNE DROITE #}
            <div class="col-md-4">
                <div class="card bg-dark text-white p-4 mb-4 border-0 shadow">
                    <h4 class="text-primary border-bottom border-primary pb-2 mb-3">Fiche Technique</h4>
                    <ul class="list-unstyled">
                        <li class="d-flex justify-content-between mb-2"><span>KM :</span> <strong>{{ ad.km }}</strong></li>
                        <li class="d-flex justify-content-between mb-2"><span>Année :</span> <strong>{{ ad.year }}</strong></li>
                        <li class="d-flex justify-content-between mb-2"><span>Énergie :</span> <strong>{{ ad.fuel }}</strong></li>
                    </ul>
                </div>

                {% set a = ad.author %}
                <div class="card p-4 shadow-sm border-0 text-center bg-light">
                   <h5>{{ a.firstName }} {{ a.lastName }}</h5>
                   <p class="text-muted small">Conseiller Garage</p>
                   <div class="text-start small mt-3">
                        {{ a.description | raw | nl2br }}
                   </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
