{% block _ad_images_widget %}
    <div id="ad_images" data-prototype="{{ form_widget(form.vars.prototype)|e('html_attr') }}">
        {{ form_widget(form) }}
    </div>
    <input type="hidden" id="widgets-counter" value="{{ form|length }}">
    <button type="button" id="add-image" class="btn btn-primary mt-2">
        <i class="fas fa-plus"></i> Ajouter une photo
    </button>
{% endblock %}

{% block _ad_images_entry_row %}
    <div class="form-group mb-3" id="block_{{ id }}">
        <div class="row">
            <div class="col-10">
                {{ form_widget(form) }}
            </div>
            <div class="col-2">
                <button type="button" data-action="delete" data-target="#block_{{ id }}" class="btn btn-danger">
                    <i class="fas fa-trash"></i>
                </button>
            </div>
        </div>
    </div>
{% endblock %}
